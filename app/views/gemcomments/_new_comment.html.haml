%div.new.comment
  %br
  %h3 Add new comment
  = form_for :gem_comment do |f|
    %p
      = f.label :name, 'Name'
      = f.text_field :name
    %p
      = f.label :email, 'Email'
      = f.text_field :email
    - unless @gem.has_rpm
      %p
        = f.label :want_it, 'Yes I want it!'
        = f.check_box :want_it
    %p
      = f.label :receive_update, 'Keep me updated!'
      = f.check_box :receive_update
    %p= f.label :text, 'Comment'
    %p= f.text_area :text

    = f.submit 'Submit', :class => 'btn btn-primary'