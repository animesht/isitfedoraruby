%h2 All Ruby Gems

%div
  = form_tag :controller => 'rubygems', :action => 'index' do
    = text_field_tag :search, params[:search] ||= '', :id => 'search_field'
    = submit_tag "Search Gem", :name => nil

%table
  %thead
    %tr
      %th Name
      %th Version
      %th Rpm

  %tbody
    - @gems.each do |gem|
      %tr
        %td= link_to gem.name, rubygem_path(gem.id)
        %td= gem.version
        %td= link_to 'View', fedorarpm_path(gem.fedora_rpm.id) if gem.fedora_rpm != nil

= will_paginate @gems